<%= form_for([@project, @pledge]) do |f| %>

<% unless f.object.errors.empty? %>
  <div class="alert alert-error">
    <strong>Try again after fixing the following things:</strong><br/>
    <ul>
      <% f.object.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<div class="field">
  <%=f.label :amount %>
  <%=f.number_field :amount %>
</div>
  </div>
  <div class="actions">
    <%= f.submit "Pledge Now" %>
  </div>

<% end %>

